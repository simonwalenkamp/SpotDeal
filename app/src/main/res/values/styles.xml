<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
    <item name="colorAccent">@color/colorRed</item>
    <item name="android:statusBarColor">@color/colorPrimary</item>
    <item name="actionOverflowButtonStyle">@style/OverFlow</item>
  </style>

  <style name="BoldText" parent="AppTheme">
    <item name="android:fontFamily">@font/lato_bold</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/colorText</item>
  </style>

  <style name="ItalicText" parent="AppTheme">
    <item name="android:fontFamily">@font/lato_lightitalic</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/colorText</item>
  </style>

  <style name="Text" parent="AppTheme">
    <item name="android:fontFamily">@font/lato_regular</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/colorText</item>
  </style>

  <style name="ItalicTextSmall" parent="AppTheme">
    <item name="android:fontFamily">@font/lato_lightitalic</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorText</item>
  </style>

  <style name="TextSmall" parent="AppTheme">
    <item name="android:fontFamily">@font/lato_regular</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorText</item>
  </style>

  <style name="Toolbar" parent="AppTheme">
    <item name="titleTextColor">@color/colorText</item>
    <item name="android:background">@drawable/toolbar_background</item>
  </style>

  <style name="ButtonText" parent="AppTheme">
    <item name="android:fontFamily">@font/lato_bold</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textSize">18sp</item>
    <item name="android:background">@color/colorPrimary</item>
  </style>

  <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
    <item name="android:src">@drawable/ic_overflow</item>
  </style>
</resources>