<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.SupplierDealActivity"
        android:id="@+id/supplier_deal_constraint">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_supplier_deal"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    <TextView
            android:id="@+id/supplier_deal_description"
            style="@style/ItalicText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_supplier_deal"/>

    <ImageView
            android:id="@+id/supplier_deal_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            app:layout_constraintTop_toBottomOf="@id/supplier_deal_description"
            android:src="@drawable/ic_image"/>

    <ImageView
            android:id="@+id/supplier_deal_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/supplier_deal_image"
            app:layout_constraintBottom_toTopOf="@id/deal_info_separator"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_info"/>

    <TextView
            android:id="@+id/supplier_deal_info"
            style="@style/ItalicTextSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/supplier_deal_image"
            app:layout_constraintBottom_toTopOf="@id/deal_info_separator"
            app:layout_constraintStart_toEndOf="@id/supplier_deal_info_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>