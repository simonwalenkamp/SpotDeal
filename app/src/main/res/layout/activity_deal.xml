<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.DealActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_deal"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    <TextView
            android:id="@+id/deal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_deal"/>

    <ImageView
            android:id="@+id/deal_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            app:layout_constraintTop_toBottomOf="@id/deal_description"
            android:src="@drawable/ic_image"/>

    <ImageView
            android:id="@+id/deal_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/deal_image"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_info"/>

    <TextView
            android:id="@+id/deal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/deal_image"
            app:layout_constraintStart_toEndOf="@id/deal_info_icon"/>
    <View
            android:id="@+id/deal_info_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray"
            app:layout_constraintTop_toBottomOf="@id/deal_info"/>

    <CheckBox
            android:id="@+id/select_all_cb"
            app:layout_constraintTop_toBottomOf="@id/deal_info_separator"
            app:layout_constraintBottom_toTopOf="@id/rec_separator_deal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/order_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/deal_info_separator"
            app:layout_constraintBottom_toTopOf="@id/rec_separator_deal"
            app:layout_constraintEnd_toStartOf="@id/orders_shown_tv"
            android:src="@drawable/ic_valid"/>


    <TextView
            android:id="@+id/orders_shown_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/deal_info_separator"
            app:layout_constraintBottom_toBottomOf="@id/rec_separator_deal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="10dp"
            style="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
            android:text="@string/valid_orders"/>

    <View
            android:id="@+id/rec_separator_deal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            app:layout_constraintTop_toBottomOf="@id/orders_shown_tv"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_order"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/layout_swipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rec_separator_deal"/>

    <ProgressBar
            android:id="@+id/order_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_deal"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/status_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_deal"/>

    <LinearLayout
            android:id="@+id/layout_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rec_order"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="10dp">

        <TextView
                android:id="@+id/redeem_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/swipe_to_complete"/>

            <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumbTintMode="src_over"
                    android:thumb="@drawable/ic_swipe"
                    android:clickable="false"
                    android:splitTrack="false"
                    android:progressDrawable="@drawable/custom_seekbar"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>