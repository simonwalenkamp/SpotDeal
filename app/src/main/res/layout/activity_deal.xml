<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.DealActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_deal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/deal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_deal"/>

    <ImageView
            android:id="@+id/deal_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/common_google_signin_btn_text_light_disabled"
            app:layout_constraintTop_toBottomOf="@id/deal_description"
            android:src="@drawable/ic_image"/>

    <ImageView
            android:id="@+id/deal_info_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/deal_image"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_info"/>

    <TextView
            android:id="@+id/deal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/deal_image"
            app:layout_constraintStart_toEndOf="@id/deal_info_icon"/>
    <View
            android:id="@+id/rec_separator_deal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/deal_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>